<!-- Header -->
<header>
    <div class="logo_image">
        <img class="image" src="" alt="{{logo}}">
        <div class="logo">{{nameEntreprise}}</div>
    </div>
    <nav>
        <ul>
            <li><a href="../index.html">Accueil</a></li>
            <li><a href="../html/about.html">À propos</a></li>
            <li><a href="../html/services.html">Services</a></li>
            <li><a href="../html/gallery.html">Galerie</a></li>
            <li><a href="../html/avis.html" class="active">Avis</a></li>
            <li><a href="../html/contact.html">Contact</a></li>
        </ul>
        <div class="burger" id="burger">&#9776;</div>
    </nav>
</header>

<!-- Hero -->
<section class="avis-hero">
    <img src="" alt="{{image}}">
    <div class="overlay"></div>
    <div class="caption">
        <h1>Avis de nos clients</h1>
        <p>{{parafirst}}</p>
    </div>
</section>

<!-- Avis dynamiques -->
<section class="avis-section">
    <div id="testimonial-container" class="avis-cards"></div>

    <form id="review-form" class="review-form">
        <h2>Laisser un avis</h2>
        <input type="text" id="name" placeholder="Votre nom" required>
        <div class="rating-input">
            <span data-value="1">★</span>
            <span data-value="2">★</span>
            <span data-value="3">★</span>
            <span data-value="5">★</span>
            <span data-value="4">★</span>
        </div>
        <input type="hidden" id="rating" required>
        <textarea id="message" placeholder="Votre message" rows="4"></textarea>
        <button type="submit">Envoyer</button>
    </form>
</section>

<!-- Footer -->
<footer>
    <div class="footer-container">
        <div class="logo_footer">
            <img src="" alt="{{logo}}">
        </div>
        <p>&copy; {{copydate}} Tous droits réservés | Créer par {{copyname}}</p>
    </div>

    <div class="information">
        <div class="footer-contact">
            <h3>Contact</h3>
            <p>📍 {{adresse}}</p>
            <p>📞 {{telephone}}</p>
        </div>

        <div class="footer-map">
            <h3>Nous trouver</h3>
            <iframe src="{{mapping}}" width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>

        <div class="footer-hours">
            <h3>Horaires</h3>
            <p>{{horairedimanche}} et {{horairelundi}}</p>
            <p>{{horairemardi}}</p>
            <p>{{horairemercredi}}</p>
            <p>{{horairejeudi}}</p>
            <p>{{horairevendredi}}</p>
            <p>{{horairesamedi}}</p>
        </div>

        <div class="footer-socials">
            <h3>Suivez-nous</h3>
            <a href="#" target="_blank">{{reseausociaux1}}</a>
            <a href="#" target="_blank">{{reseausociaux2}}</a>
        </div>
    </div>
</footer>